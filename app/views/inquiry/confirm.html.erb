<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>

<h1>お問い合わせ - 再度内容をご確認ください</h1>

<table class="table">
  <tr>
    <th>名前</th>
    <td>
    <%= f.hidden_field :name %>
    <%= @inquiry.name %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td>
    <%= f.hidden_field :email %>
    <%= @inquiry.email %>
    </td>
  </tr>
  <tr>
    <th>お問い合わせ内容</th>
    <td>
    <%= f.hidden_field :content %>
    <%= @inquiry.content %>
   </td>
  </tr>
</table>
<%= f.submit '内容を修正する', name: 'back' %>
<%= f.submit 'この内容で送信' %>
<% end %>