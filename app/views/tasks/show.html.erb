

<p>
  <strong>User:</strong>
  <%= @task.user.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>Charge:</strong>
  <%= @task.charge.name %>
</p>

<p>
  <strong>Done:</strong>
  <%= if @task.done? then "完了" else "未完了" end %>
</p>

<p>
  <strong>Status:</strong>
  <%= if @task.status == 1 then "対応中" elsif @task.status == 0 then "未着手" end %>
</p>

<% unless @task.project.nil? %>
<%= link_to 'タスク編集', edit_project_project_task_path(@task.project, @task) %>
<% else %>
<%= link_to 'タスク編集', edit_user_task_path(@task.user, @task) %>
<% end %>

<br />

<%= link_to 'マイタスク一覧へ戻る', user_tasks_path(@task.user) %><br />
<% unless @task.project.nil? %>
<%= link_to 'プロジェクトタスク一覧へ戻る', project_path(@task.project) %>
<% else %>
<% end %>
