<% questions.order(created_at: :desc).each do |question| %>
 <div class="panel panel-primary">
     <div class="panel-heading">
         <h3 class="panel-title"><%= link_to question.title, question_path(question.id) %></h3>
     </div>
     <div class="panel-body">
         <%= question.content %><br>


         <P><% @user=User.find(question.user_id) %>
         <%= profile_img(@user) %>投稿者:<%= question.user.name %></P>

         <em><%= question.created_at %></em>

          <% if current_user.id == question.user_id %>
　　　　　<%= link_to 'Edit', edit_question_path(question.id) %> | 
          <%= link_to 'Delete', question_path(question.id), :method => :delete %>
          <% else %>

          <% end %>
     </div>
 </div>
<% end %>
