
<div class="row">
  <div class="col-sm-2">質疑件名</div>
  <div class="col-sm-10"><%= @question.title %></div>
</div>

<div class="row">
  <div class="col-sm-4">コース：
    <% if @question.course == "1" %>
    	<%= "Ruby on Rails" %>
    <% elsif @question.course == "2" %>
    	<%= "WordPress" %>
    <% elsif @question.course == "3" %>
    	<%= "Webデザイン" %>
    <% elsif @question.course == "4" %>
    	<%= "その他" %>
    <% else %>
    <% end %>
  </div>
  <div class="col-sm-4">カテゴリー：
    <%= "" if @question.category == "0" %>
    <%= "カリキュラム" if @question.category == "1" %>
    <%= "教材" if @question.category == "2" %>
    <%= "授業料" if @question.category == "3" %>
    <%= "その他" if @question.category == "4" %>  
  </div>
  <div class="col-sm-4">質疑者：<%= @question.user.name %></div>
</div>

<div class="row">
  <div class="col-sm-2">内容</div>
  <div class="col-sm-10"><%= @question.content %></div>
</div>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<%= render partial: 'answers/form', locals: { answer: @answer } %>

<div id="answers_area">
  <%= render partial: 'answers/index', locals: { answers: @answers } %>
</div>