<%= form_for([@project, :project, @project_task]) do |f| %>
  <% if @project_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project_task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @project_task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :project_id %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline %>
  </div>
  <div class="field">
    <%= f.hidden_field :charge_id %>
  </div>
  <div class="field">
    <%= f.label :完了チェック %><br>
    <%= f.check_box :done %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, [["未着手","0"],["対応中","1"]] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
