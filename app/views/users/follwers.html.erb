<div class="container">
    <div class="panel panel-primary">
    
         <div class="panel-heading">
          <div class="row">
            <div class="col-xs-12 col-sm-8">
              <h2 class="panel-title">#<%= @user.name %></h2>
            </div>
          </div>
         </div>
    
         <div class="panel-body">
           
            <div class="col-xs-12 col-sm-1 text-nowrap">
               <%= profile_img(@user) %>
            </div>
            
            <div class="col-xs-12 col-sm-11">
               プロフィール: <%= simple_format(@user.profile) %>
            </div> 
    
         </div>
         
         <div class="panel-footer text-right">

           <% if current_user.id == @user.id %>
    　　　 <%= link_to 'Edit', edit_user_registration_path(@user) %> | 
           <% else %>
           <% end %>
          <%= link_to 'Back', users_path %>
          ユーザー登録日:<%= @user.created_at %>
         </div>
         
    </div>
</div>

<div class="container">

    <h3>フォローワー:</h3>

<div class="container">
    <table class="table table-hover">
        
        <thead>
            <tr>
                <th>ユーザ名</th>
                <th>友達つながり</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |follower| %>
            <tr>
                <td>
                    <%= link_to profile_img(follower), follower %>
                    <%= link_to follower.name, follower %>
                </td>
                <td>
                    <% unless follower == current_user %>
                    <%= render partial: 'follow_form', locals: { user: follower } %>
                    <% else %>
                    <%= link_to "マイアカウント", follower, class: "btn btn-info btn-sm" %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
        
    </table>
    
</div>


