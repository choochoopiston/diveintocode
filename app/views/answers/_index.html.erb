<% @answers.each do |answer| %>
  <% unless answer.id.nil? %>
    <h1>回答</h1>
    <div class="row">
      <div class="col-sm-8"><%= answer.content %></div>
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-6"><%= answer.user.name %></div>
          <div class="col-sm-6"><%= profile_img(answer.user) %></div>
        </div>
        <% if current_user.id == user.id %>
        <div class="row">
          <div class="col-xs-12">
            <%= link_to 'Edit', edit_answer_path(answer) %> | 
            <%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <% else %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
