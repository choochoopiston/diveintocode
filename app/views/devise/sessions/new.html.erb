<div class = "container">
	<div class="wrapper">
		<form action="" method="post" name="Login_Form" class="form-signin">       
		    <h3 class="form-signin-heading">ログイン画面</h3>
			  <hr class="colorgraph"><br>
			  
			  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    		  
			  <%= f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス' %>
			  <%= f.password_field :password, :class => 'form-control', :placeholder => 'パスワード' %>
			  
			  <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :今後パスワードの自動入力を利用 %>
              <% end -%>
			  
			  <%= f.submit "ログインする!", :class => 'btn btn-lg btn-primary btn-block' %>
			  <% end %>
		</form>			
	</div>
</div>


<%= render "devise/shared/links" %>