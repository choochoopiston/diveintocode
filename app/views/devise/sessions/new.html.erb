<div class = "container">
	<div class="wrapper">
		<div class="form-signin">       
		    <h3 class="form-signin-heading">ログイン画面</h3>
			  <hr class="colorgraph"><br>
			  
			  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    		  
			  <%= f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス' %>
			  <%= f.password_field :password, :class => 'form-control', :placeholder => 'パスワード' %>
			  

              
			  <%= f.submit "ログインする!", :class => 'btn btn-lg btn-primary btn-block' %>
			  <% end %>
			  

			  
			  <br>

		<%= render "devise/shared/links" %>
		</div>	
		
	</div>
	
</div>

