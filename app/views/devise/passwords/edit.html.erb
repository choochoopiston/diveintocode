<div class = "container">
	<div class="wrapper">
		<form action="" method="post" name="Login_Form" class="form-signin">       
		    <h3 class="form-signin-heading">パスワードの変更</h3>
			  <hr class="colorgraph"><br>
			  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %><%= devise_error_messages! %><%= f.hidden_field :reset_password_token %>
    		  <% if @minimum_password_length %>
			  <%= f.password_field :password, :class => 'form-control', :placeholder => '新パスワード(8文字以上)' %>
			  <% end %>
              <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => '変更を許可する為、現パスワードを入力' %>
			  <%= f.submit "パスワードを変更する!", :class => 'btn btn-lg btn-primary btn-block' %>
			  <% end %>
		</form>
	</div>
</div>

<%= render "devise/shared/links" %>
