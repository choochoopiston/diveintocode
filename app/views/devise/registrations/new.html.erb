<div class = "container">
	<div class="wrapper">
		<div class="form-signin"> 
		    <h3 class="form-signin-heading">新規ユーザー登録画面</h3>
			  <hr class="colorgraph"><br>
			  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %><%= devise_error_messages! %>
    		<%= f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス' %>
			  <%= f.text_field :name, :class => 'form-control', :placeholder => 'ユーザー名' %>
			  <% if @minimum_password_length %>
			  <%= f.password_field :password, :class => 'form-control', :placeholder => 'パスワード(8文字以上)' %>
			  <% end %>
			  <%= f.password_field :password, :class => 'form-control', :placeholder => '確認の為、再度パスワードを入力' %>
			  <%= f.submit "新規ユーザー登録する!", :class => 'btn btn-lg btn-primary btn-block' %>
			  <% end %>
			  <%= render "devise/shared/links" %>
		</div
	</div>
</div>


